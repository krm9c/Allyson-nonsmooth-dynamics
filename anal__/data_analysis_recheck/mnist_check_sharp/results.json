{
  "experiment": "MNIST AWB A/B Training Analysis",
  "date": "2026-01-15",
  "description": "Minimal working example demonstrating that A/B training with proper epochs and experience replay smooths task transitions and reduces catastrophic forgetting",

  "setup": {
    "tasks": [0, 3, 4],
    "task_transforms": {
      "task_0": {"rotation": 98.8, "shear": 98.8, "seed": 0},
      "task_3": {"rotation": 91.9, "shear": 91.9, "seed": 3000},
      "task_4": {"rotation": 118.6, "shear": 118.6, "seed": 4000}
    },
    "epochs_per_task": 15,
    "ab_configs_tested": [1, 5, 15],
    "batch_size": 64,
    "learning_rate": 0.001,
    "n_samples": 5000,
    "experience_replay_weight": 0.7,
    "current_task_weight": 0.3
  },

  "results": {
    "baseline": {
      "task_0_accuracy": 26.9,
      "task_3_accuracy": 40.2,
      "task_4_accuracy": 97.4,
      "average_accuracy": 54.8,
      "task_0_forgetting": 52.6,
      "task_3_forgetting": 21.2
    },
    "awb_1_epoch": {
      "task_0_accuracy": 39.3,
      "task_3_accuracy": 44.2,
      "task_4_accuracy": 98.0,
      "average_accuracy": 60.5,
      "task_0_forgetting": 39.4,
      "task_3_forgetting": 18.4
    },
    "awb_5_epochs": {
      "task_0_accuracy": 72.2,
      "task_3_accuracy": 53.3,
      "task_4_accuracy": 97.9,
      "average_accuracy": 74.5,
      "task_0_forgetting": 7.2,
      "task_3_forgetting": 11.1
    },
    "awb_15_epochs": {
      "task_0_accuracy": 79.4,
      "task_3_accuracy": 60.3,
      "task_4_accuracy": 98.2,
      "average_accuracy": 79.3,
      "task_0_forgetting": 4.8,
      "task_3_forgetting": 4.6
    }
  },

  "key_findings": {
    "forgetting_reduction": "10x (52.6% → 4.8% on Task 0)",
    "accuracy_improvement": "24.5% absolute (54.8% → 79.3%)",
    "critical_insight": "A/B training requires experience replay and sufficient epochs to converge"
  }
}
